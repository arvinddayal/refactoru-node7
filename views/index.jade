extends layout

block content
	.container
		img(src="images/lexcorp.png")
		h1 LexCorp
		h2 Application for Evil Project Manager

		form#application-form(action="/applicant", method="post")
			.form-group
				input.form-control(name="name", type="text", placeholder="Name")
			.form-group
				textarea.form-control(name="bio",rows="5", placeholder="Bio")
			.form-group
				textarea.form-control(name="skills",rows="3", placeholder="Evil Skills (separated by commas)")
			.form-group
				input.form-control(name="years", type="number", placeholder="Years of evil experience")
			.form-group
				textarea.form-control(name="why", rows="5",placeholder="Why do you want to work here?")
			.form-group
				input.btn.btn-default(type="submit")
		
		#success-message.alert.alert-success.hidden
			| Application submitted!
